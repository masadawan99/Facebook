<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.facebook.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="logo-text" text="facebook" />
   <TextField fx:id="usernameField" maxWidth="350.0" promptText="Email or Phone Number" />
   <PasswordField fx:id="passwordField" maxWidth="350.0" promptText="Password" />
    <Button maxWidth="350.0" onAction="#onLoginButtonClick" text="Log In" />
   <Button styleClass="transparent" text="Forgot Password?" onAction="#onForgotPasswordClick" />
   <Label text="or" />
   <Button styleClass="secondary" mnemonicParsing="false" onAction="#onSignupButtonClick" text="Create New Account" />
   <Label fx:id="errorLabel" styleClass="error-toast" visible="false" />
</VBox>
